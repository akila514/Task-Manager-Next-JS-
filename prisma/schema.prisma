datasource db {
    provider = "mongodb"
    url = env("MONGODB_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch","fullTextIndex"]
}

model Task {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String  
  userId      String @db.ObjectId
  createdAt   DateTime @default(now())

  @@index([title])
}

model User{
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  password    String
  createdAt   DateTime @default(now())
}
